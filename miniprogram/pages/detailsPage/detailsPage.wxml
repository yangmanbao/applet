<!--pages/detailsPage/detailsPage.wxml-->
<view>
  <view class="nav-bar" style="height:{{navBarHeight}}px;background-color:#F6F9FE">
    <view class="title" style="height:{{menuHeight}}px;bottom:{{menuBottom}}px;line-height:{{menuHeight}}px;display: flex;justify-content:space-between">
      <van-icon name="arrow-left" size="30px" style="margin-top: 80rpx;" bindtap="backBtn" />
      <view style="margin-top: 45rpx; font-size:35rpx">霸王龙威尔逊</view>
      <view style="width: 60rpx;height: 10rpx;"></view>
    </view>
  </view>
  <view class="mainparts">
    <view class="mainNav">
      <view class="navNav">
        <view>
          <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="atver"></van-image>
        </view>
        <view>
          <view style="color: #2E3E63;font-weight:bold;font-size: 40rpx;">霸王龙威尔逊</view>
          <view style="font-size: 28rpx;line-height: 60rpx;">品牌:PNSO恐龙大王</view>
          <view style="margin-top: 30rpx;">
            <van-button color="#9CA5B6" style="margin-right: 40rpx;" size="small" round>
              <van-icon name="like-o" style="margin-right: 15rpx;" />
              想入
            </van-button>
            <van-button color="#9CA5B6" size="small" round>
              <van-icon name="like" style="margin-right: 15rpx;" />
              已入
            </van-button>
          </view>
        </view>
      </view>
      <view class="modelScore">
        <view style="font-size: 30rpx;color: #515F7D;padding: 20rpx;">
          模型评分
        </view>
      </view>
    </view>

    <view class="tags">
      <van-tabs bind:click="onClick">
        <van-tab title="模型图">
          <view class="advertisingMap">
            <view class="advertisingMapText">官方宣传图</view>
            <scroll-view scroll-x>
              <view style="display: flex;">
                <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="maps"></van-image>
                <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="maps"></van-image>
                <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="maps"></van-image>
                <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="maps"></van-image>
                <van-image width="100" height="100" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" class="maps"></van-image>
              </view>
            </scroll-view>
          </view>
        </van-tab>
        <van-tab title="资料">
          <view class="information">
            <view class="informationText">
              模型参数
            </view>
            <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                制作厂商
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{manufacturer}}
              </view>
            </view>
            <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                品牌系列
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{brand}}
              </view>
            </view> <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                产品比例
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{product}}
              </view>
            </view> <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                尺寸信息
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{size}}
              </view>
            </view>
             <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                重量
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{weight}}
              </view>
            </view>
            <view class="informationTexts">
              <view style="width: 130rpx;  text-align-last: justify;">
                发售时间
              </view>
              <view style="margin-left: 30rpx; line-height: 50rpx;font-size: 30rpx;">
              {{createTime}}
              </view>
            </view>
          </view>

        </van-tab>
        <van-tab title="评价">玩家评价</van-tab>
      </van-tabs>
    </view>
  </view>
</view>